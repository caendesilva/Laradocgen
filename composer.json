{
    "name": "desilva/docgen",
    "description": "Generates documentation based on Markdown on the fly and can compile it to static HTML",
    "keywords": [
        "desilva",
        "docgen"
    ],
    "homepage": "https://github.com/desilva/docgen",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Caen De Silva",
            "email": "caen@desilva.se",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "illuminate/support": "^8.42|^9.0",
        "league/commonmark": "^2.2",
        "torchlight/torchlight-commonmark": "*",
        "torchlight/torchlight-laravel": "^0.5.11"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "DeSilva\\Docgen\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DeSilva\\Docgen\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DeSilva\\Docgen\\DocgenServiceProvider"
            ],
            "aliases": {
                "Docgen": "DeSilva\\Docgen\\DocgenFacade"
            }
        }
    }
}
